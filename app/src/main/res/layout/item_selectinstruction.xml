<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <com.nice.widget.NiceTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:text="选择说明题："/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/item_selectinstruction_yes"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:onClick="onClicks"
                android:gravity="center">
            <com.nice.widget.NiceImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/checkmark_side_black"/>
            </RelativeLayout>
            <com.nice.widget.NiceTextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="是"/>
            <com.nice.widget.NiceEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:text="句话回话会发"
                android:background="@drawable/u15_gray_btn"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/item_selectinstruction_no"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:onClick="onClicks"
                android:gravity="center">
                <com.nice.widget.NiceImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/checkmark_black"/>
            </RelativeLayout>
            <com.nice.widget.NiceTextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="否"/>
            <com.nice.widget.NiceEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:background="@drawable/u15_gray_btn"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>