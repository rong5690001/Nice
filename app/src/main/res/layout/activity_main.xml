<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.nice.ui.MainActivity">

    <include
        layout="@layout/title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="14dp"
        android:gravity="center"
        android:background="@color/blue"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:text="我的问卷库"/>
    
    <LinearLayout
        android:id="@+id/new_contrainer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:onClick="onClick"
        android:gravity="center_vertical">

        <com.nice.widget.NiceImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="11dp"
            android:src="@mipmap/icon_new"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_bg"
            android:gravity="center_vertical">

            <com.nice.widget.NiceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:paddingTop="13dp"
                android:text="新问卷"
                android:textColor="@color/black"/>

            <com.nice.widget.NiceTextView
                android:id="@+id/num_new"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/arrows_new"/>

            <com.nice.widget.NiceImageView
            android:id="@+id/arrows_new"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/arrow"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/incomplete_contrainer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:onClick="onClick"
        android:gravity="center_vertical">

        <com.nice.widget.NiceImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="11dp"
            android:src="@mipmap/icon_incomplete"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_bg"
            android:gravity="center_vertical">

            <com.nice.widget.NiceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:paddingTop="13dp"
                android:text="未完成问卷"
                android:textColor="@color/black"/>

            <com.nice.widget.NiceTextView
                android:id="@+id/num_incomplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/arrows_incomplete"/>

            <com.nice.widget.NiceImageView
                android:id="@+id/arrows_incomplete"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/uploaded_contrainer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:onClick="onClick"
        android:gravity="center_vertical">

        <com.nice.widget.NiceImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="11dp"
            android:src="@mipmap/icon_uploaded"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_bg"
            android:gravity="center_vertical">

            <com.nice.widget.NiceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:layout_marginTop="13dp"
                android:text="已上传问卷"
                android:textColor="@color/black"/>

            <com.nice.widget.NiceTextView
                android:id="@+id/num_uploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/arrows_uploaded"/>

            <com.nice.widget.NiceImageView
                android:id="@+id/arrows_uploaded"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
