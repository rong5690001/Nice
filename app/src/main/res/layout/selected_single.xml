<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/item_new_question_choose_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="21dp"
            android:gravity="center">

            <com.nice.widget.NiceImageView
                android:id="@+id/item_new_question_choose_btn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/radio_btn_bg"/>

        </RelativeLayout>

        <com.nice.widget.NiceTextView
            android:id="@+id/item_new_question_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginLeft="6dp"
            android:text="this is name"/>
    </LinearLayout>

</LinearLayout>