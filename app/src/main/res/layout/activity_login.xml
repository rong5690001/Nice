<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.nice.ui.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <com.nice.widget.NiceImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@mipmap/user_top"/>

        <com.nice.widget.NiceImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/head" />
        <!--用户名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/u15_gray_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.nice.widget.NiceImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/businessman_blue" />

            <com.nice.widget.NiceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="用户名"
                android:textColor="@color/gary"
                android:textSize="16sp" />

            <com.nice.widget.NiceEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/u15_gray_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.nice.widget.NiceImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/fraud_blue" />

            <com.nice.widget.NiceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="密   码"
                android:textColor="@color/gary"
                android:textSize="16sp" />

            <com.nice.widget.NiceEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <com.nice.widget.NiceImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/radio"
                android:layout_marginTop="20dp"/>
            <com.nice.widget.NiceTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:text="记住我？"/>
        </LinearLayout>

        <com.nice.widget.NiceButton
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/yellow_btn"
            android:text="登 录" />



    </LinearLayout>

</RelativeLayout>

