<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nice">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name = "android.hardware.camera" />
    <uses-feature android:name = "android.hardware.camera.autofocus" />
    <application
        android:name=".NiceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_flower"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.NewQuestActivity"
            android:label="@string/title_activity_new_quest"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.IncompleteQuestionActivity"
            android:label="@string/title_activity_incomplete_quest"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ui.QuestionNoteActivity" />
        <activity
            android:name=".ui.QuestionSignActivity"
            android:label="@string/title_activity_question_sign"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.QuestionContextActivity"
            android:label="@string/title_activity_question_context"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.SignNameActivity"
            android:label="@string/title_activity_sign_name"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>
